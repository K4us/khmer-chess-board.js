{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "indent": [
      "error",
      4
    ],
    "no-return-await": 0,
    "comma-dangle": [
      "error",
      "never"
    ],
    "space-before-function-paren": "off"
  },
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "standard"
  ],
  "globals": {
    "passport": "readonly",
    "test": "readonly",
    "expect": "readonly",
    "describe": "readonly",
    "beforeAll": "readonly",
    "afterAll": "readonly",
    "SocketIo": "readonly"
  }
}